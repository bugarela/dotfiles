{
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one"
  },
  "[nix]": {
    "editor.defaultFormatter": "brettm12345.nixfmt-vscode"
  },
  "[typescript]": {
    "editor.autoIndent": "advanced",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true
  },
  "breadcrumbs.enabled": false,
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.inlineSuggest.enabled": true,
  "editor.tabSize": 2,
  "eslint.alwaysShowStatus": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "files.watcherExclude": {
    "**/.ammonite": true,
    "**/.bloop": true,
    "**/.metals": true
  },
  "git.autofetch": true,
  "github.copilot.enable": {
    "*": true,
    "markdown": true
  },
  "githubPullRequests.fileListLayout": "tree",
  "haskell.serverExecutablePath": "/nix/store/f916sv3da68qb2my47ip8p9cbbrkp0mk-haskell-language-server-1.8.0.0/bin/haskell-language-server",
  "keyboard.dispatch": "keyCode",
  "rewrap.autoWrap.enabled": true,
  "rust-analyzer.server.path": "/nix/store/82pm0mngmpk5bq604mv8ljmimk0027d1-rustup-1.26.0/bin/rust-analyzer",
  "task.problemMatchers.neverPrompt": {
    "shell": true
  },
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "tlaplus.tlc.statisticsSharing": "share",
  "vim.replaceWithRegister": true,
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false,
    "<C-w>": false
  },
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.hlsearch": true,
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": [">"],
      "commands": ["editor.action.indentLines"]
    },
    {
      "before": ["<"],
      "commands": ["editor.action.outdentLines"]
    },
    {
      "before": ["p"],
      "after": ["p", "g", "v", "y"]
    }
  ],
  "vim.statusBarColorControl": true,
  "window.menuBarVisibility": "toggle",
  "window.zoomLevel": 1,
  "workbench.colorTheme": "Community Material Theme Ocean",
  "workbench.editorAssociations": {
    "*.md": "default"
  },
  "workbench.activityBar.visible": true,
  "explorer.openEditors.visible": 0,
  "editor.roundedSelection": false,
  "editor.folding": true,
  "workbench.editor.showTabs": true,
  "window.title": "${folderName}/${activeEditorShort}",
  "editor.cursorBlinking": "solid",
  "rust-analyzer.rustc.source": "discover",
  "rust-analyzer.workspace.symbol.search.scope": "workspace_and_dependencies",
  "tlaplus.java.options": "-DTLA-Library=/home/gabriela/projects/apalache/src/tla"
}
